# AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== API Keys ====================
# OpenAI API Key for GPT models
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ==================== Database Configuration ====================
# PostgreSQL Database
POSTGRES_USER=admin
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=ai_platform

# ==================== Redis Configuration ====================
# Redis Cache and Session Store
REDIS_PASSWORD=change-this-redis-password

# ==================== RabbitMQ Configuration ====================
# Message Queue for Async Tasks
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=change-this-rabbitmq-password

# ==================== LiteLLM Configuration ====================
# LiteLLM API Keys
LITELLM_API_KEY=sk-1234
LITELLM_MASTER_KEY=sk-master-1234

# ==================== Application Configuration ====================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (debug, info, warning, error)
LOG_LEVEL=info

# Maximum Concurrent Requests
MAX_CONCURRENT_REQUESTS=50

# ==================== GPU Configuration ====================
# Enable GPU Support (true/false)
# Note: macOS does not support GPU acceleration
ENABLE_GPU=false

# GPU Memory Utilization (0.0 to 1.0)
GPU_MEMORY_UTILIZATION=0.9

# ==================== Service URLs (Internal Docker Network) ====================
# These are default values for Docker Compose networking
# Change only if you modify service names in docker-compose.yml

AGENT_SERVICE_URL=http://agent-service:8000
MCP_SERVER_URL=http://mcp-server:8000
LITELLM_URL=http://litellm:4000
POSTGRES_URL=postgresql://admin:password@postgres:5432/ai_platform
REDIS_URL=redis://:password@redis:6379
QDRANT_URL=http://qdrant:6333
RABBITMQ_URL=amqp://admin:password@rabbitmq:5672

# ==================== Security Configuration ====================
# JWT Secret for Authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ==================== Feature Flags ====================
# Enable/Disable specific features
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_METRICS=true

# ==================== Rate Limiting ====================
# Requests per minute per user
RATE_LIMIT_PER_MINUTE=100

# ==================== Model Configuration ====================
# Default Model for Agents
DEFAULT_MODEL=qwen2.5

# Ollama Models to Pull on Startup (comma-separated)
OLLAMA_MODELS=qwen2.5:latest,llama2:latest

# ==================== Monitoring Configuration ====================
# Prometheus Scrape Interval
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ==================== Development Configuration ====================
# Hot Reload for Development
DEV_HOT_RELOAD=true

# Debug Mode
DEBUG=false

# ==================== Production Configuration ====================
# Enable HTTPS (for production)
ENABLE_HTTPS=false

# SSL Certificate Path
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# ==================== Backup Configuration ====================
# Automated Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# S3 Backup Configuration (optional)
S3_BACKUP_ENABLED=false
S3_BUCKET_NAME=your-backup-bucket
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
